generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // Usar caminho absoluto evita confusão de diretório de trabalho ao iniciar o servidor
  url      = "file:C:/Users/lanas/desafio-fullstack-2025/backend/prisma/pavi.db"
}

model Brand {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  stores Store[]
  cars   Car[]
}

model Store {
  id      Int    @id @default(autoincrement())
  name    String
  brand   Brand  @relation(fields: [brandId], references: [id])
  brandId Int
  cars    Car[]
}

model Car {
  id          Int     @id @default(autoincrement())
  model       String
  year        String
  version     String?
  mileage     String?
  description String?
  images      String?
  price       Float
  brand       Brand   @relation(fields: [brandId], references: [id])
  brandId     Int
  store       Store   @relation(fields: [storeId], references: [id])
  storeId     Int
}
