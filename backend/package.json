{
  "name": "desafio-fullstack-2025",
  "version": "1.0.0",
  "description": "Backend for my fullstack application using NestJS",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "seed": "ts-node -r tsconfig-paths/register src/seed.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/mapped-types": "^1.2.2",
    "@nestjs/platform-express": "^9.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0",
    "sqlite3": "^5.1.6",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.17",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^9.0.0",
    "eslint": "^8.0.0",
    "jest": "^27.0.0",
    "ts-jest": "^27.0.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "license": "MIT"
}
